- title "Edit Role for #{@user.full_name}"

= simple_form_for(@user, :url => update_role_user_path(@user)) do |f|
  = render "shared/error_messages", :target => @user
  = f.input :role_id, :collection => @roles
  .form-actions
    = link_to 'Back', @user, :class => "btn"
    = f.submit "Save", :class => "btn btn-primary"
